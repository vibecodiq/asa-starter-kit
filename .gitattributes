# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf

# Batch scripts (Windows)
*.bat text eol=crlf
*.cmd text eol=crlf

# JSON, YAML, TOML
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Markdown
*.md text eol=lf

# Jinja2 templates
*.j2 text eol=lf

# Lock files (always LF)
*.lock text eol=lf

# Documentation
LICENSE text eol=lf
README text eol=lf

# Git config files
.gitattributes text eol=lf
.gitignore text eol=lf

# Binary files
*.db binary
*.sqlite binary
*.sqlite3 binary
*.pyc binary
*.pyo binary
*.so binary
*.dll binary
*.dylib binary
*.exe binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
